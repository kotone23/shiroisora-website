{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useKeyWithClickEvents": "off"
			}
		}
	},
	"files": {
		"include": ["app/**/*", "lib/**/*"],
		"ignore": ["app/components/ui/*", ".next/**/*"]
	}
}
